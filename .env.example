# =============================================================================
# Purbank Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# REQUIRED variables must be set, OPTIONAL variables have defaults

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Optional - defaults are suitable for development

#DB_HOST=localhost
#DB_PORT=5432
#DB_NAME=purbank
#DB_USERNAME=purbank_user
#DB_PASSWORD=dev_password

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
# Mail server settings

#MAIL_HOST=mail.hilfikernet.ch
#MAIL_PORT=465
#MAIL_USERNAME=no-reply@purbank.ch

# REQUIRED: Mail password for authentication
# Get dev password from: https://cloud.hilfikers.com/f/1498293
MAIL_PASSWORD=

# Mail behavior settings

#MAIL_AUTH=true
#MAIL_SSL=true
#MAIL_DEBUG=false

# Email sender configuration

#MAIL_FROM=no-reply@purbank.ch
#MAIL_FROM_NAME=Purbank
#MAIL_VERIFICATION_SUBJECT=Verify Your Email - Purbank Registration
#MAIL_SUCCESS_SUBJECT=Welcome to Purbank!

# =============================================================================
# JWT SECURITY CONFIGURATION
# =============================================================================
# REQUIRED: JWT secret key (must be at least 32 characters)
# Generate a secure random string, e.g.:
# openssl rand -base64 32

JWT_SECRET_KEY=

# Token expiration times (in milliseconds)

#JWT_EXPIRATION=900000              # 15 minutes
#JWT_REFRESH_EXPIRATION=1200000     # 20 minutes (inactivity timeout)
#JWT_REFRESH_ABSOLUTE_EXPIRATION=43200000  # 12 hours (max lifetime)

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

SERVER_PORT=8080

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Set to true to enable CORS
# Be aware that this will allow requests to the API from anywhere! Use a proxy in between to set proper headers.

CORS_ENABLE=false


# =============================================================================
# SWAGGER/OPENAPI CONFIGURATION
# =============================================================================
# Set to false to disable Swagger UI and API docs (recommended for production)

SWAGGER_ENABLED=true

# Production server URL for Swagger

#SWAGGER_PROD_URL=https://ebanking.purbank.ch

# =============================================================================
# LOGGING
# =============================================================================
# Options: TRACE, DEBUG, INFO, WARN, ERROR

LOG_LEVEL=DEBUG

# =============================================================================
# SPRING PROFILE
# =============================================================================
# Options: dev, prod

SPRING_PROFILES_ACTIVE=dev